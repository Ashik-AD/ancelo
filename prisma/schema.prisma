// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Tasks {
  id          String   @id @default(cuid())
  title       String
  description String
  duration    Int
  completed   Boolean  @default(false)
  created_at  DateTime @default(now())
}

model Sessions {
  id          String         @id @default(cuid())
  title       String
  description String?
  duration    Int
  schedule    DateTime?
  theme       String?
  thumbnail   String?
  background  String?
  tasks       SessionTasks[]
  created_at  DateTime       @default(now())
}

model SessionTasks {
  id          String    @id @default(cuid())
  title       String
  description String?
  duration    Int
  Sessions    Sessions? @relation(fields: [sessionsId], references: [id])
  sessionsId  String?
  completed   Boolean   @default(false)
  created_at  DateTime  @default(now())
}

model Routines {
  id         String         @id @default(cuid())
  title      String
  startAt    DateTime
  finishAt   DateTime
  repeatDays String
  interval   Int
  cover      String
  tasks      RoutineTasks[]
  created_at DateTime       @default(now())
}

model RoutineTasks {
  id         String    @id @default(cuid())
  title      String
  duration   Int
  Routines   Routines? @relation(fields: [routinesId], references: [id])
  routinesId String?
  created_at DateTime  @default(now())
  completed  Boolean   @default(false)
}
